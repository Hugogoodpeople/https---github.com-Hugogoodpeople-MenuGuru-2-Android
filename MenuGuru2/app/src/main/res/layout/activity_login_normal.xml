<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="pt.menuguru.menuguru2.LoginNormal"
    android:background="#ffe1e0e1">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Entrar com a Menu Guru"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="25dp"
        android:textColor="#666666"
        android:textStyle="bold"
        android:textSize="17dp" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:id="@+id/linearLayout">

        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#ffa7a6ad"></FrameLayout>

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:id="@+id/text_user"
            android:layout_below="@+id/textView"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:background="@android:color/transparent"
            android:hint="Email"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:inputType="textEmailAddress" />

        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="15dp"
            android:background="#ffa7a6ad" />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:id="@+id/text_senha"
            android:layout_below="@+id/text_user"
            android:layout_alignLeft="@+id/text_user"
            android:layout_alignStart="@+id/text_user"
            android:layout_alignRight="@+id/text_user"
            android:layout_alignEnd="@+id/text_user"
            android:background="@android:color/transparent"
            android:hint="Senha"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:password="true" />

        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#ffa7a6ad" />
    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Esqueceste-te da password?"
        android:id="@+id/button_recuperar_senha"
        android:layout_below="@+id/linearLayout"
        android:layout_alignLeft="@+id/linearLayout"
        android:layout_alignStart="@+id/linearLayout"
        android:layout_marginTop="10dp"
        android:background="@android:color/transparent"
        android:textSize="13dp"
        android:textColor="#666666"
        android:layout_marginLeft="15dp" />

</RelativeLayout>
