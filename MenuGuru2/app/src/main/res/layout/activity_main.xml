<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context=".MainActivity"
    android:background="#ffe1e0e1">

    <ListView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/listaMainActivity"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/empty_list_main"
        android:layout_toEndOf="@+id/empty_list_main"
        android:layout_alignTop="@+id/empty_list_main"
        android:dividerHeight="0dp"
        android:divider="@null"
        android:background="#ffe1e0e1" />

    <TextView
        android:id="@+id/empty_list_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:text="Lista vazia" >
    </TextView>

</RelativeLayout>
